<% layout('layouts/boilerplate') -%>
<div class="row mt-3">

    <div class="row offset-2">
        <div class="col-md-4 dashboard">
        <p><i class="fa-solid fa-shield"></i>&nbsp;&nbsp;Admin</p>
        <hr>
        <p>Total: <%=adminCount%></p>
        </div>

        <div class="mb-3 col-md-8 offset-1 dashboard">
         <p><i class="fa-solid fa-users"></i>&nbsp;&nbsp;Employees</p>
        <hr>
        <p>Total:<%= employeeCount %></p>
        </div>
    </div>

       <div class="mb-3 col-md-8 offset-4 dashboard">
         <p><i class="fa-solid fa-money-bill"></i>&nbsp;&nbsp;Salary</p>
        <hr>
        <p>Total: &#8377; <%= totalSalary.toLocaleString("en-IN") %></p>
        </div>
</div>

<hr>

<div class="row offset-5 mt-3 mb-3">
    <h3>List of Admins</h3>
</div>
<table class="table table-bordered  table-hover">
    <thead>
    <tr class="table-heading">
        <th scope="col" >Name</th>
        <th scope="col">email</th> 
        <th scope="col">Phone No.</th>     
    </tr>
    </thead>
    <tbody>
    <% for(admin of admins){%>
       <tr>
        <td ><%= admin.name %></td>
         <td ><%= admin.email%></td>
         <td ><%= admin.phone%></td>
       </tr>
   <% } %>
</tbody>
</table>